{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.ts",
    "start:js": "nodemon dist/server.js",
    "start:prod": "set NODE_ENV=production&& node dist/server.js",
    "build": "tsc -p tsconfig.json",
    "postbuild": "cp -R datastore/sql/migrations ./dist/datastore/sql/migrations",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.4",
    "nodemon": "^3.1.7",
    "parcel-bundler": "^1.12.5",
    "pre-commit": "^1.2.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "targets": {
    "engines": {
      "node": "18.x"
    },
    "default": {
      "includeNodeModules": false
    }
  }
}
